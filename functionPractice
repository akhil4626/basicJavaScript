

//this is just mathwematical operation function
function k(x){
  var  x = x*x+111-x/1;
    return x;
}

var f = k(2);
console.log(f);
var ko = k(10);
console.log(ko);
console.log(k(100));

//function to know whether the number is evemn or not

function isEven(x){
    if(x%2==0){
        return true;
    } else{
        return false;
    }
}

var kl = isEven(11);
console.log(kl);
var ll = isEven(10);
console.log(ll);


//multiplier function
function multiplier(arr){
    for(i = 0; i<arr.length;i++){
        arr[i] =  arr[i] *2;
    }
    return arr;
}
var inputarr = [2,7,9];
var output = multiplier(inputarr);
console.log(output);


//passing array into the function whiuch counts the even numbers
function countEvenNumbers(arr){
    let count =0;
    for(let i =0; i<arr.length;i++){
        if(arr[i]%2===0){
            count++;
        }
    } return count;

}

const inputArray = [11,22,33,44,66,77,88,99];
const outputArray = countEvenNumbers(inputArray);
console.log(outputArray);




